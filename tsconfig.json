{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "./cache/*",
    "./coverage/*",
    "./lib/*",
  ]
}
